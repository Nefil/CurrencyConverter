<Window x:Class="CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Currency Converter Online" Height="400" Width="550" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Heading -->
        <TextBlock Text="Currency Converter" 
                   Grid.Row="0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="36" 
                   Foreground="#E91E63"/>

        <!-- Conversion result -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock x:Name="txtResult" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     FontSize="20" 
                     Foreground="#E91E63"
                     FontWeight="Bold"
                     Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Conversion panel -->
        <Border Grid.Row="2" 
                Background="#E91E63" 
                CornerRadius="10" 
                Margin="20">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Amount field -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                    <TextBlock Text="Enter Amount:" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtAmount" 
                             Height="30" 
                             FontSize="16"/>
                </StackPanel>

                <!-- Source currency -->
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                    <TextBlock Text="From:" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFromCurrency" 
                              Height="30" 
                              FontSize="16">
                        <ComboBoxItem Content="--SELECT--" IsSelected="True"/>
                        <ComboBoxItem Content="USD"/>
                        <ComboBoxItem Content="EUR"/>
                        <ComboBoxItem Content="PLN"/>
                        <ComboBoxItem Content="GBP"/>
                    </ComboBox>
                </StackPanel>

                <!-- Arrow icon -->
                <TextBlock Grid.Column="1" 
                           Grid.Row="1" 
                           Text="⇄" 
                           FontSize="30" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>

                <!-- Target currency -->
                <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock Text="To:" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbToCurrency" 
                              Height="30" 
                              FontSize="16">
                        <ComboBoxItem Content="--SELECT--" IsSelected="True"/>
                        <ComboBoxItem Content="USD"/>
                        <ComboBoxItem Content="EUR"/>
                        <ComboBoxItem Content="PLN"/>
                        <ComboBoxItem Content="GBP"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Button x:Name="btnConvert" 
                    Content="Convert" 
                    Width="150" 
                    Height="40" 
                    Margin="10,0" 
                    Background="#E91E63" 
                    Foreground="White" 
                    FontSize="18" 
                    Click="btnConvert_Click"/>
            <Button x:Name="btnClear" 
                    Content="Clear" 
                    Width="150" 
                    Height="40" 
                    Margin="10,0" 
                    Background="#E91E63" 
                    Foreground="White" 
                    FontSize="18" 
                    Click="btnClear_Click"/>
        </StackPanel>
    </Grid>
</Window>