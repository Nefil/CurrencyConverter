<Window x:Class="CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Currency Converter Online" Height="400" Width="550" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        x:Name="mainWindow">
    <Window.Resources>
        <!-- Theme Resources -->
        <SolidColorBrush x:Key="BackgroundColor" Color="White"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#E91E63"/>
        <SolidColorBrush x:Key="TextColor" Color="Black"/>
        <SolidColorBrush x:Key="ButtonTextColor" Color="White"/>
    </Window.Resources>

    <Grid x:Name="mainGrid" Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Heading with Theme Switch -->
        <Grid Grid.Row="0">
            <TextBlock Text="Currency Converter" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="36" 
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,10,0,10"/>

            <!-- Button in the upper right corner -->
            <ToggleButton x:Name="btnThemeToggle" 
                          Content="🌙" 
                          Width="40" 
                          Height="40"
                          Margin="0,5,10,5"
                          Background="{StaticResource PrimaryColor}"
                          Foreground="{StaticResource ButtonTextColor}"
                          FontSize="18"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Click="btnThemeToggle_Click"/>
        </Grid>

        <!-- Conversion result -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock x:Name="txtResult" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     FontSize="20" 
                     Foreground="{StaticResource PrimaryColor}"
                     FontWeight="Bold"
                     Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Conversion panel -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryColor}" 
                CornerRadius="10" 
                Margin="20">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Amount field -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                    <TextBlock Text="Enter Amount:" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtAmount" 
                             Height="30" 
                             FontSize="16"/>
                </StackPanel>

                <!-- Source currency -->
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                    <TextBlock Text="From:" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFromCurrency" 
                              Height="30" 
                              FontSize="16">
                        <ComboBoxItem Content="--SELECT--" IsSelected="True"/>
                        <ComboBoxItem Content="INR"/>
                        <ComboBoxItem Content="JPY"/>
                        <ComboBoxItem Content="USD"/>
                        <ComboBoxItem Content="NZD"/>
                        <ComboBoxItem Content="EUR"/>
                        <ComboBoxItem Content="CAD"/>
                        <ComboBoxItem Content="ISK"/>
                        <ComboBoxItem Content="PHP"/>
                        <ComboBoxItem Content="DKK"/>
                        <ComboBoxItem Content="CZK"/>
                        <ComboBoxItem Content="PLN"/>
                        <ComboBoxItem Content="GBP"/>
                    </ComboBox>
                </StackPanel>

                <!-- Arrow icon -->
                <TextBlock Grid.Column="1" 
                           Grid.Row="1" 
                           Text="⇄" 
                           FontSize="30" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>

                <!-- Target currency -->
                <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock Text="To:" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbToCurrency" 
                              Height="30" 
                              FontSize="16">
                        <ComboBoxItem Content="--SELECT--" IsSelected="True"/>
                        <ComboBoxItem Content="INR"/>
                        <ComboBoxItem Content="JPY"/>
                        <ComboBoxItem Content="USD"/>
                        <ComboBoxItem Content="NZD"/>
                        <ComboBoxItem Content="EUR"/>
                        <ComboBoxItem Content="CAD"/>
                        <ComboBoxItem Content="ISK"/>
                        <ComboBoxItem Content="PHP"/>
                        <ComboBoxItem Content="DKK"/>
                        <ComboBoxItem Content="CZK"/>
                        <ComboBoxItem Content="PLN"/>
                        <ComboBoxItem Content="GBP"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Button x:Name="btnConvert" 
                    Content="Convert" 
                    Width="150" 
                    Height="40" 
                    Margin="10,0" 
                    Background="{StaticResource PrimaryColor}" 
                    Foreground="White" 
                    FontSize="18" 
                    Click="btnConvert_Click"/>
            <Button x:Name="btnClear" 
                    Content="Clear" 
                    Width="150" 
                    Height="40" 
                    Margin="10,0" 
                    Background="{StaticResource PrimaryColor}" 
                    Foreground="White" 
                    FontSize="18" 
                    Click="btnClear_Click"/>
        </StackPanel>
    </Grid>
</Window>